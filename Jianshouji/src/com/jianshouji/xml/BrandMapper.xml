<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jianshouji.mapper.BrandMapper" >
  <resultMap id="BaseResultMap" type="com.jianshouji.model.Brand" >
    <id column="GUID" property="guid" jdbcType="VARCHAR" />
    <result column="BRANDNAME" property="brandname" jdbcType="VARCHAR" />
    <result column="CEO" property="ceo" jdbcType="VARCHAR" />
    <result column="BRANDTEL" property="brandtel" jdbcType="VARCHAR" />
    <result column="BRANDADDRESS" property="brandaddress" jdbcType="VARCHAR" />
    <result column="logoaddress" property="logoaddress" jdbcType="VARCHAR" />
  </resultMap>
	<!-- 查找明星品牌,暂时没有字段区分是否为明星品牌，有待修改 -->
	<select id="selectStarBrand" resultMap="BaseResultMap">
		select * from jianshouji.tab_jianshouji_brand 
		where 1=1
	</select>
		<select id="selectAllBrand" resultMap="BaseResultMap">
		select GUID,BRANDNAME from tab_jianshouji_brand 
	</select>
	<!-- 获取品牌下拉框 -->
	<select id="brandCombobox" resultMap="BaseResultMap">
	select GUID,BRANDNAME from tab_jianshouji_brand
	</select>
</mapper>